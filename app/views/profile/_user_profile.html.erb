<div class="row row-profile">
  <div class="col-sm-9">
    <div class="page-header">
      <h3>About <strong class="highlight">Me</strong></h3>
    </div>
    <div class="about-me">
      <%= markdown(user.about_me) %>
    </div>
    <div class="page-header">
      <h3>My <strong class="highlight">Skills</strong></h3>
    </div>
    <%= render :partial => "skills/skills", :locals => { skills: user.skills } %>
  </div>
  <div class="col-sm-3">
    <span class="thumbnail img-about">
      <%= image_tag user.gravatar_url %>
      <small><%= user.avatar_label if user.avatar_label and user.avatar_label.length > 0 %></small>
    </span>
    <hr />
    <ul class="list-group">
      <!--<li class="list-group-item">
        <a href="#contact" data-toggle="modal" data-target="#contact">
          <span class="fa-fw fa fa-2x fa-envelope-square"></span>
          <span class="sr-only">Email</span>
        </a>
      </li>-->
      <% if current_tenant.github_handle and current_tenant.github_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('github-square', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">GitHub:</span>
        <a href="https://github.com/<%= current_tenant.github_handle %>" target="_blank">
          @<%= current_tenant.github_handle %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.googleplus_handle and current_tenant.googleplus_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('google-plus-square', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">Google+:</span>
        <a href="https://plus.google.com/<%= current_tenant.googleplus_handle %>" target="_blank">
          <%= current_tenant.googleplus_handle %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.linkedin_handle and current_tenant.linkedin_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('linkedin-square', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">LinkedIn:</span>
        <a href="http://www.linkedin.com/in/<%= current_tenant.linkedin_handle %>/" target="_blank">
          <%= current_tenant.linkedin_handle %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.soundcloud_handle and current_tenant.soundcloud_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('soundcloud', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">SoundCloud:</span>
        <a href="https://soundcloud.com/<%= current_tenant.soundcloud_handle %>" target="_blank">
          <%= current_tenant.soundcloud_handle %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.tumblr_url and current_tenant.tumblr_url.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('tumblr-square', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">Tumblr:</span>
        <a href="<%= current_tenant.tumblr_url %>" target="_blank">
          <%= current_tenant.tumblr_url %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.twitter_handle and current_tenant.twitter_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('twitter-square', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">Twitter:</span>
        <a href="https://twitter.com/<%= current_tenant.twitter_handle %>" target="_blank">
          @<%= current_tenant.twitter_handle %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.vimeo_handle and current_tenant.vimeo_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('vimeo-square', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">Vimeo:</span>
        <a href="http://vimeo.com/<%= current_tenant.vimeo_handle %>" target="_blank">
          <%= current_tenant.vimeo_handle %>
        </a>
      </li>
      <% end %>
      <% if current_tenant.youtube_handle and current_tenant.youtube_handle.length > 0 %>
      <li class="list-group-item list-group-item-social">
        <%= icon('youtube-play', '', class: 'fa-fw fa-2x') %>
        <span class="sr-only">YouTube:</span>
        <a href="https://youtube.com/user/<%= current_tenant.youtube_handle %>" target="_blank">
          <%= current_tenant.youtube_handle %>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
</div>
