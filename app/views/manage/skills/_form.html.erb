<%= form_for ([:manage, @skill_category, @skill]), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :skill_category_id, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.collection_select :skill_category_id, SkillCategory.all, :id, :name, {}, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    manage_skills_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
