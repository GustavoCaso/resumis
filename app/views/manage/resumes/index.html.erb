<% page_title "Resumes" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Published</th>
      <th>Created</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.name %></td>
        <td><%= resume.description %></td>
        <td>
          <% if resume.published %>
            <span class="label label-success">Yes</span>
          <% else %>
            <span class="label label-danger">No</span>
          <% end %>
        </td>
        <td><%= time_ago_in_words(resume.created_at) %> ago</td>
        <td>
          <%= link_to resume_path(resume), :class => 'btn btn-sm', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= icon 'info-circle', '', class: 'fa-lg' %>
          <%- end -%>
          <%= link_to resume_path(resume, :format => :pdf), :class => 'btn btn-sm', :title => 'PDF' do %>
            <%= icon 'file-pdf-o', '', class: 'fa-lg' %>
          <%- end -%>
          <%= link_to edit_manage_resume_path(resume), :class => 'btn btn-sm', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= icon 'pencil', '', class: 'fa-lg' %>
          <%- end -%>
          <%= link_to manage_resume_path(resume), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-sm', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= icon 'remove', '', class: 'fa-lg' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_manage_resume_path, :class => 'btn btn-primary' do %>
  <%= icon 'plus', 'New Resume' %>
<% end %>
