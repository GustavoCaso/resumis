<%= form_for [:manage, @project], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :short_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :short_description, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text_field form-control', :rows => '6', :"data-provide" => "markdown", :'data-iconlibrary' => 'fa' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :start_date, { start_year: 2005, end_year: Date.today.year }, :class => 'form-control inline-block', :style => 'max-width: 100px;' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :end_date, { :include_blank => true, start_year: 2005, end_year: Date.today.year }, { :class => 'form-control inline-block', :style => 'max-width: 100px;' } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_status_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :project_status_id, ProjectStatus.all, :id, :name, {}, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_categories, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_check_boxes(:project_category_ids,  ProjectCategory.order("name ASC"), :id, :name,
        { :selected => @project.project_category_ids }, { :multiple => true } ) do |b| %>
        <%= b.label(class: "checkbox-inline") do %>
          <%= b.check_box %>
          <%= b.text %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% if current_tenant.developer? %>
  <div class="form-group">
    <%= f.label :github_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon">github.com/</span>
        <%= f.text_field :github_url, :class => 'text_field form-control' %>
      </div>
    </div>
  </div>
  <% end %>
  <% if current_tenant.filmmaker? %>
  <div class="form-group">
    <%= f.label :vimeo_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon">vimeo.com/</span>
        <%= f.text_field :vimeo_url, :class => 'text_field form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :youtube_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon">youtube.com/watch?v=</span>
        <%= f.text_field :youtube_url, :class => 'text_field form-control' %>
      </div>
    </div>
  </div>
  <% end %>
  <% if current_tenant.musician? %>
  <div class="form-group">
    <%= f.label :soundcloud_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon">soundcloud.com/</span>
        <%= f.text_field :soundcloud_url, :class => 'text_field form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bandcamp_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :bandcamp_url, :class => 'text_field form-control' %>
    </div>
  </div>
  <% end %>
  <% if current_tenant.writer? %>
  <div class="form-group">
    <%= f.label :penflip_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <div class="input-group">
        <span class="input-group-addon">penflip.com/</span>
        <%= f.text_field :penflip_url, :class => 'text_field form-control' %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  manage_projects_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
