<% page_title "Projects" %>

<%= render partial: "projects/project" , collection: @projects %>

<% content_for :actionbar_left do %>
  <%= paginate @projects %>
<% end %>

<% content_for :actionbar_right do %>
<div class="btn-group dropup">
  <%= link_to new_manage_project_path, class: 'btn btn-primary' do %>
    <%= icon 'plus', 'Add' %>
  <% end %>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu right" role="menu">
    <li><%= link_to "New Project", new_manage_project_path %></li>
    <li><%= link_to "New Project Category", new_manage_project_category_path %></li>
  </ul>
</div>
<% end %>
