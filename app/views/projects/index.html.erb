<div class="page-header clearfix">
  <%= page_title "Projects", :h1, { class: "page-header-left" } %>
  <% if user_signed_in? and current_tenant == current_user %>
  <div class="page-header-right">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to new_manage_project_path, class: 'btn btn-primary btn-sm' do %>
        <%= icon 'plus', 'Add' %>
      <% end %>
      <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "New Project", new_manage_project_path %></li>
        <li><%= link_to "New Project Category", new_manage_project_category_path %></li>
      </ul>
    </div>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="btn-group btn-group-justified" role="group">
      <div class="btn-group btn-group-responsive" role="group">
        <button id="all" class="btn btn-primary">All</button>
      </div>
      <div class="btn-group btn-group-responsive" role="group">
        <button id="current-projects" class="btn btn-default js-filter">Current</button>
      </div>
      <div class="btn-group btn-group-responsive" role="group">
        <button id="past-projects" class="btn btn-default js-filter">Past</button>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="btn-group btn-group-justified" role="group">
      <% @project_categories.each do |category| %>
        <div class="btn-group btn-group-responsive" role="group">
          <button id="<%= category.slug %>" class="btn btn-default js-filter">
            <%= category.name %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr />

<%= render @projects %>
