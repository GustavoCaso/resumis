<% content_for(:jumbotron) do %>
<div class="jumbotron">
  <div class="container text-center">
    <h1>Boom! <strong>Resumis.</strong></h1>
    <h2>Advertise Yourself</h2>
  </div>
</div>
<% end %>

<% @users.each_slice(3) do |slice| %>
<div class="row">
  <% slice.each do |user| %>
    <div class="col-sm-4">
      <div class="panel">
        <div class="panel-body text-center">
          <%= link_to "#{request.protocol}#{u tenant_instance_hostname(user)}/", class: 'thumbnail', target: '_blank' do %>
            <%= image_tag user.avatar_url, class: 'media-object', height: '64', alt: user.full_name %>
          <% end %>
          <h4>
            <%= user.full_name ? user.full_name : user.subdomain %>
          </h4>
          <a href="//<%= tenant_instance_hostname(user) %>"><%= tenant_instance_hostname(user) %></a>
          <p class="lead">
            <%= user.tagline %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% end %>
